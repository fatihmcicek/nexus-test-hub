<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Pet Store API Test Suite" verbose="1">
    <listeners>
        <listener class-name="com.nexustest.utils.TestListener"/>
    </listeners>

    <test name="Pet API Tests">
        <classes>
            <class name="com.nexustest.api.tests.PetTest"/>
        </classes>
    </test>

    <test name="Store API Tests">
        <classes>
            <class name="com.nexustest.api.tests.StoreTest"/>
        </classes>
    </test>

    <test name="User API Tests">
        <classes>
            <class name="com.nexustest.api.tests.UserTest"/>
        </classes>
    </test>
</suite>